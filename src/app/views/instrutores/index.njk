
{% extends "layout.njk" %}

{% block content %}

<div class="card table-cont">
    <table width=100%>
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Atuação</th>
                <th><a href="/instrutores/create/"><i class="add material-icons">person_add</i></a></th>
            </tr>
        </thead>
        <tbody>
            {% for instrutor in instrutores %}
                <tr>
                    <td><span style="background-image: url({{ instrutor.avatar_url }})"></span>
                        {{ instrutor.name }}</td>
                    <td>
                                <span>{{ instrutor.services }}</span>
                    </td>
                    <td><a href="/instrutores/{{instrutor.id}}"><i class="material-icons">keyboard_arrow_right</i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock content %}