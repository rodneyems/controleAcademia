{% extends "layout.njk" %}

{% block content %}

<div class="card table-cont">
    <table width=100%>
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Atuação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for instrutor in instrutores %}
                <tr>
                    <td><span style="background-image: url({{ instrutor.avatar_url }})"></span>
                        {{ instrutor.name }}</td>
                    <td>{{ instrutor.area }}</td>
                    <td><a href="/instrutores/{{instrutor.id}}">VER</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock content %}