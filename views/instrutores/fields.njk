<div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://" value={{ instrutor.avatar_url }}>
            </div>
        </div>
  
        <div class="item">
            <div>Nome Completo</div>
            <div>
                <input type="text" name="name" placeholder="Digite seu nome" value="{{ instrutor.name }}">
            </div>
        </div>
    
        <div class="item">
            <div>Data de Nascimento</div>
            <div>
                <input type="date" name="nascimento" value="{{ instrutor.nascimento }}">
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input 
                    type="radio" 
                    name="sexo" 
                    value="Masculino" 
                    {% if instrutor.sexo == "Masculino" %} 
                        checked 
                    {% endif %}>  Masculino</span>
                
                <span><input 
                    type="radio" 
                    name="sexo" 
                    value="Feminino"
                    {% if instrutor.sexo == "Feminino" %} 
                        checked 
                    {% endif %}>  Feminino</span>
                <span><input 
                    type="radio" 
                    name="sexo" 
                    value="Indefinido"
                    {% if (instrutor.sexo == "Indefinido") or (instrutor.sexo == undefined ) %} 
                        checked 
                    {% endif %}>  Indefinido</span>
            </div>
        </div>

        <div class="item",class="create">
            <div>Área de Atuação</div>
            <div class="check">
                {% if instrutor.area %} 
                    <a><input type="checkbox" name="area[]" value="Crossfit" {% if ("Crossfit" in instrutor.area) %} checked {% endif %}>  Crossfit</a>
                    <a><input type="checkbox" name="area[]" value="Musculação" {% if ("Musculação" in instrutor.area) %} checked {% endif %}>  Musculação</a>
                    <a><input type="checkbox" name="area[]" value="Aeróbica" {% if ("Aeróbica" in instrutor.area) %} checked {% endif %} >  Aeróbica</a>
                    <a><input type="checkbox" name="area[]" value="Dança" {% if ("Dança" in instrutor.area) %} checked {% endif %}>  Dança</a>
                {% else %}
                    <a><input type="checkbox" name="area[]" value="Crossfit">  Crossfit</a>
                    <a><input type="checkbox" name="area[]" value="Musculação">  Musculação</a>
                    <a><input type="checkbox" name="area[]" value="Aeróbica">  Aeróbica</a>
                    <a><input type="checkbox" name="area[]" value="Dança">  Dança</a>
                {% endif %}
            </div>
        </div>

        <button type="submit">Salvar</button>